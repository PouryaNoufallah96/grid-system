{
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${PWD}"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "command": "npx"
    },
    "ref": {
      "type": "http",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "ref-2a87c958d1877942236e"
      }
    },
    "exa": {
      "command": "npx",
      "args": ["/Users/pourya/projects/mcp/exa-mcp-server/build/index.js"],
      "env": {
        "EXA_API_KEY": "69b84344-2ada-4cb9-9b78-73e7237e118f"
      }
    },
    "memory": {
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "command": "npx"
    },
    "context7": {
      "args": ["-y", "@upstash/context7-mcp"],
      "command": "npx"
    },
    "playwright": {
      "args": ["@playwright/mcp@latest", "--vision"],
      "command": "npx"
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "grep": {
      "type": "http",
      "url": "https://mcp.grep.app"
    }
  }
}
